{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_testimonial_index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-3">
                    <div class="card add">
                        <div class="card-body">
                            <div class="stat-widget-one">
                                <a href="{{ path('admin_testimonial_new') }}">
                                    <div class="stat-icon dib">
                                        <i class="ti-plus text-success border-success"></i>
                                    </div>
                                    <div class="stat-content dib">
                                        <div class="stat-text text-success">{{ 'menu.add_new'|trans }}</div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Dánh sách ý kiến khách hàng</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Tên</th>
                                        <th>Nội dung</th>
                                        <th>{{ 'label.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in objects %}
                                    <tr>
                                        <td>
                                            <div class="images-container">
                                                <img src="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('admin_thumb') }}" alt="{{ row.getName() }}" />
                                            </div>
                                        </td>
                                        <td><strong>{{ row.getName() }}</strong></td>
                                        <td>{{ row.getComments() }}</td>
                                        <td>
                                            <div class="item-actions">
                                                <a href="{{ path('admin_testimonial_edit', {id: row.id}) }}" class="btn-sm">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>
                                                
                                                {{ include('admin/testimonial/_delete_form.html.twig', {object: row}, with_context = false) }}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
