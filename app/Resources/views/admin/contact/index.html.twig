{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_comment_index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'contact.title.list'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ 'label.author'|trans }}</th>
                                        <th>{{ 'label.phone'|trans }}</th>
                                        <th>{{ 'label.contents'|trans }}</th>
                                        <th>{{ 'label.published_at'|trans }}</th>
                                        <th>{{ 'label.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in objects %}
                                        <tr>
                                            <td>{{ row.getName() }}</td>
                                            <td>{{ row.getPhone() }}</td>
                                            <td>{{ row.getContents() }}</td>
                                            <td>{{ row.getCreatedAt() | localizeddate('medium', 'short', null, 'Asia/Ho_Chi_Minh', 'd/M/YYYY') }}</td>
                                            <td>
                                                <div class="item-actions">
                                                    {{ include('admin/contact/show.html.twig', {object: row}, with_context = false) }}
                                                    
                                                    <a href="#" class="btn-sm" data-toggle="modal" data-target="#showContact{{row.id}}">
                                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                                    </a>

                                                    {{ include('admin/contact/_delete_form.html.twig', {object: row}, with_context = false) }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- .animated -->
    </div>
{% endblock %}
