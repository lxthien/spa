<div class="col-xs-12 col-sm-4 col-md-3 news-item">
    <div class="news-item-wrapper">
        <div class="col-inner">
            <div class="box has-hover has-hover box-text-bottom">
                <div class="box-image">
                    <div>
                        <a href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}">
                            <picture>
                                <!--[if IE 9]><video style="display: none"><![endif]-->
                                <source
                                    data-srcset="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_385_394') }}"
                                    media="(max-width: 800px)" />
                                <source
                                    data-srcset="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_385_394') }}"
                                    media="(min-width: 801px)" />
                                <!--[if IE 9]></video><![endif]-->
                                <img
                                    src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                    data-src="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_385_394') }}"
                                    class="lazyload"
                                    alt="{{row.getTitle()}}" />
                            </picture>
                        </a>
                    </div>
                </div>
                <div class="box-text text-center">
                    <div class="box-text-inner">
                        <a href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}"><strong>{{ row.getTitle() }}</strong></a>
                        <p>{{ row.getDescription()|slice(0, 105) }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>